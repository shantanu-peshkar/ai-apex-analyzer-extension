{
  "manifest_version": 3,
  "name": "AI Apex Code Explainer",
  "version": "0.4",
  "description": "Static + AI Analyzer for Salesforce Apex",

  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],

  "host_permissions": [
    "https://*.salesforce.com/*",
    "https://*.force.com/*",
    "https://*.salesforce-setup.com/*",
    "https://generativelanguage.googleapis.com/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "options_page": "settings.html",

  "action": {
    "default_popup": "settings.html",
    "default_title": "AI Apex Settings"
  },

  "content_scripts": [
    {
      "matches": [
        "https://*.salesforce.com/*",
        "https://*.force.com/*",
        "https://*.salesforce-setup.com/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "all_frames": true,
      "match_about_blank": true
    }
  ],

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
